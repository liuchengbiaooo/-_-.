@import "../../pages/common/weui.wxss";
page {
  background-color:#f8f8f8;
  height:100%;
  font-size:32rpx;
  line-height:1.6;
}
.btn-area {
margin-top:60rpx;
box-sizing:border-box;
width:100%;
padding:0 30rpx;

}

.section{
  height: 30px;
  width: 100%;
}
.section input{
  width:90%;
  margin:5px auto;
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 3px;
  padding: 0 5px;
}
.map_container{
  position: absolute;
  top: 42px;
  bottom: 80px;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
  padding: 0 15px;
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}
.page-section{
  margin-bottom: 10rpx;
}
.btn-area {
  margin-top:10rpx;
}
.page-body-button {
  margin-bottom: 0;
  text-align: right;
}
.ad_popError{ background: #de352d; color: #fff; height: 58rpx; line-height: 58rpx; font-size: 24rpx; text-align: center;  position: fixed; left: 0; top: 0; width: 100%; z-index:3;}
.mini-btn {
  width: 120px;
  margin: 12px 0;
}