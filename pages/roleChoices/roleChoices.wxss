    .roleChoices {
        position: relative;
        display: flex;
        height: 100vh;
        width: 100%;
        flex-direction: column;
    }
    
    .role_img {
        width: 100%;
        height: calc(100vh - 22%);
    }
    
    .role_img>image {
        width: 100%;
        height: 100%;
    }
    
    .role_btn {
        background-color: #45ABAD;
        flex-grow: 1;
        display: flex;
        align-items: center;
        justify-content: space-around;
    }
    
    .btn_text {
        width: 165rpx;
        height: 165rpx;
        border-radius: 50%;
        background-color: white;
        font-size: 30rpx;
        color: #3A9E9B;
        text-align: center;
        line-height: 150rpx;
    }